{
  "name": "md2pdf",
  "version": "0.1.0",
  "description": "Command-line tool for converting Markdown files to PDF",
  "main": "dist/index.js",
  "bin": {
    "md2pdf": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc && mkdir -p dist/styles && cp src/styles/default.css dist/styles/",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "markdown",
    "pdf",
    "converter",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.1.0",
    "markdown-it": "^14.1.0",
    "puppeteer": "^23.11.1"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  }
}
